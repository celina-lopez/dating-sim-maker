<h1><%= @story.title %> - <%= @chapter.title %></h1>

<button class="btn btn-dating">Edit</button>
<%= link_to "New Line", new_story_chapter_line_path(@story, @chapter), class: "btn btn-dating" %>

<% @lines.each do |line| %>
  <div id="line-<%= line.id %>" class="card text-white bg-lavender my-3 hover-hidden">
    <div class="card-body">
      <div class="row card-text">
        <div class="col">
          <%= line.speaker_name %>: <%= line.text %>    
        </div>
        <div class="col-auto">
          <a class="hidden text-white">
            <i class="fas fa-pen-fancy"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
    $('#line-<%= line.id %>').click(function(){
      window.location.href = "<%= edit_story_chapter_line_path(@story, @chapter, line) %>";
    });
  </script>
<% end %>

