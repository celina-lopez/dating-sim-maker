<h1>Chapters!</h1>
<div class="row mt-3">
  <% @chapters.each do |chapter| %>
    <div class="col-4">
      <div id="story-<%= chapter.id %>" class="link card text-white bg-lavender mb-3" style="width: 18rem; height: 14rem;cursor: pointer;">
        <div class="card-header text-center">─── ･ ｡ﾟ☆: *.☽ .* :☆ﾟ. ───</div>
        <div class="card-body">
          <h5 class="card-title"><%= chapter.title %></h5>
          <p class="card-text">what to add</p>
        </div>
      </div>
    </div>
    <script type="text/javascript">
      $('#story-<%= chapter.id %>').click(function(){
        window.location.href = "<%= story_chapter_path(@story, chapter) %>";
      });
    </script>
  <% end %>
</div>

<%= link_to "new", new_story_chapter_path %>