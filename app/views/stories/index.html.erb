<%= render "layouts/title_header", title: "Dating Sims!" %>
<div class="row mt-3">
  <% @stories.each_with_index do |story, idx| %>
    <div class="col-3">
      <div id="story-<%= story.id %>" class="link card <%= card_color(idx) %> mb-3" style="width: 18rem; height: 14rem;cursor: pointer;">
        <div class="card-header text-center">─── ･ ｡ﾟ☆: *.☽ .* :☆ﾟ. ───</div>
        <div class="card-body">
          <h5 class="card-title"><%= story.title %></h5>
          <p class="card-text"><%= story.mini_description %></p>
        </div>
      </div>
    </div>
    <script type="text/javascript">
      $('#story-<%= story.id %>').click(function(){
        window.location.href = "<%= story_path(story) %>";
      });
    </script>
  <% end %>
</div>

<%= paginate @stories, theme: 'bootstrap4' %>

<%= link_to "new", new_story_path %>