<div class="container mt-6">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2 class="text-center mb-3">Login</h2>
      <div class="card">
        <div class="card-body">
          <%= simple_form_for(@user, as: :user, url: sessions_path, method: :post, html: { 'data-parsley-validate' => true }) do |f| %>
            <%= f.input :username, required: true, autofocus: true %>
            <%= f.input :password, required: true, autofocus: true %>
            <%= f.button :submit, "Log in", class: 'btn btn-dating' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
