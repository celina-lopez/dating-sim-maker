<%= f.input :order, required: true %>
<!-- hide order -->
<%= f.input(
  :speakeable_id,
  required: true,
  as: :select,
  collection: [
    ["MC", 0],
    *current_user.characters.map{ |c| [c.name, c.id] }
  ]
)%>
<%= f.input :text, required: true %>
<%= f.input(
  :emotion,
  required: true,
  as: :select,
  collection: Line.emotions.keys.map {|k| [k.humanize, k]},
)%>


<%= f.simple_fields_for(:option) do |option_f| %>
  <% Option::OPTIONS.each do |answer| %>
    <%= option_f.input answer, required: true %>
  <% end %>

  <% Option::WEIGHTS.each do |weight| %>
    <%= option_f.input weight, required: true %>
  <% end %> 
<% end %>
