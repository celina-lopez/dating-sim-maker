<%= render "layouts/title_header", title: "#{@story.title} Characters!" %>
<div class="row mt-3">
  <% @characters.each_with_index do |character, idx| %>
    <div class="col-auto">
      <div id="story-<%= character.id %>" class="link card <%= card_color(idx) %> mb-3" style="width: 18rem; height: 14rem;cursor: pointer;">
        <div class="card-header text-center">─── ･ ｡ﾟ☆: *.☽ .* :☆ﾟ. ───</div>
        <div class="card-body">
          <h5 class="card-title"><%= character.name %></h5>
          <p class="card-text"><%= character.biography %></p>
        </div>
      </div>
    </div>
    <script type="text/javascript">
      $('#story-<%= character.id %>').click(function(){
        window.location.href = "<%= edit_character_path(character) %>";
      });
    </script>
  <% end %>
</div>


<%= paginate @characters, theme: 'bootstrap4' %>

<%= link_to "back", story_path(@story) %> |
<%= link_to "new character", new_character_path(story_id: @story.id) %> |
<%= link_to "add existing character", new_story_storycharacter_path %>