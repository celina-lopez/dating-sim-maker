<h1>Characters!</h1>
<div class="row mt-3">
  <% @characters.each do |character| %>
    <div class="col-4">
      <div id="story-<%= character.id %>" class="link card text-white bg-lavender mb-3" style="width: 18rem; height: 14rem;cursor: pointer;">
        <div class="card-header text-center">─── ･ ｡ﾟ☆: *.☽ .* :☆ﾟ. ───</div>
        <div class="card-body">
          <h5 class="card-title"><%= character.name %></h5>
          <p class="card-text"><%= character.biography %></p>
        </div>
      </div>
    </div>
    <script type="text/javascript">
      $('#story-<%= character.id %>').click(function(){
        window.location.href = "<%= edit_character_path(character) %>";
      });
    </script>
  <% end %>
</div>

<%= link_to "new character", new_character_path %> |
<%= link_to "add existing character", new_story_storycharacter_path %>