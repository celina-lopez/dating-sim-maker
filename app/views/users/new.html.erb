<div class="container mt-6">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2 class="text-center mb-3">Signup</h2>
      <div class="card">
        <div class="card-body">
          <%= simple_form_for(@user, as: :user, url: users_path, method: :post) do |f| %>
            <%= f.input :username, required: true %>
            <%= f.input :password, required: true %>
            <%= f.button :submit, "Sign up", class: 'btn btn-dating' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
